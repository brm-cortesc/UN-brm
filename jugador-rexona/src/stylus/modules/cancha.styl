.actividad
	background-color #fff
	padding 0.5rem 1rem
	max-height 41.8rem
	overflow-y scroll
	
	&-usuario
		border-bottom 1px solid lighten($Gris, 80%)
		color darken($Azul, 60%)
		padding 1rem 0.2rem

		
		img
			height auto
			max-height 3.2rem
			max-width @max-height

		img, p, i
			display inline-block
			margin 0
			vertical-align middle
			
		p
			time
				display block
				font-size 1.1rem
		
		strong
			color inherit

.cancha
	path('cancha.png')
	background-position center top
	background-repeat no-repeat
	height 49.3rem
	margin-top 5rem
	position relative
	width 100%
	
	.usuario
		opacity 0
		position absolute
		transitionBase(0.3s)
		width 16rem
		
		span
			background-color $Azul
			border-radius 0 0 10px 10px
			color #fff
			display block
			font-size 1.3rem
			margin-top -1rem
			max-width 16rem
			padding 0.5rem
			position relative
			text-align center
			z-index 2
			
			&:after
				background-color #000
				border-radius 100%
				bottom -0.7rem
				box-shadow 0px 0px 10px 0px #000
				content ''
				display block
				height 0.5rem
				left 0
				opacity 0.4
				position absolute
				width 100%
				z-index -1
			
			strong
				color #fff
				

		&-1
			left 28%
			top -4rem
			transition-delay 0.03s
			
		&-2
			left 51%
			top -4rem
			transition-delay 0.06s
			
		&-3
			left 40%
			top 5rem
			transition-delay 0.09s
			
		&-4
			left 15%
			top 11rem
			transition-delay 0.12s
			
		
		&-5
			left 40%
			top 15.7rem
			transition-delay 0.15s

		&-6
			right 15%
			top 11rem
			transition-delay 0.18s
			
		&-7
			left 7.4%
			top 22rem
			transition-delay 0.21s
			

		&-8
			left 23%
			top 27rem
			transition-delay 0.24s		
			
		&-9
			bottom 9.2rem
			left 40%
			transition-delay 0.27s
			
		&-10
			right 23%
			top 27rem
			transition-delay 0.30s
			
		&-11
			right 7.4%
			top 22rem
			transition-delay 0.33s
				
		.img-avatar
			display block
			margin 0 auto
			position relative
			z-index 1

.icon
	path('arrows.svg')
	background-repeat no-repeat
	display inline-block
	height 2.7rem
	pointer-events none
	width @height
	
	&-sube
		background-position bottom

.img-avatar
	border 5px solid #fff
	border-radius 100%
	display inline-block
	height auto
	max-height 5.9rem
	max-width @max-height
	

.tabla
	border 1px solid $Gris
	position relative
	text-align center
	
	h3
		background-color $Azul
		border-radius 0 0 10px 10px
		color #fff
		margin -1.5rem auto 2rem
		max-width 23rem
		padding 0.2rem 0
		text-align center
	
	.usuario
		display inline-block
		margin-left 0.5rem
		margin-right @margin-left
		vertical-align middle
		width 30%
		
	
		span
			background-color #fff
			border-radius 0 0 10px 0
			color $Azul
			font-size 1.3rem
			margin-left -1.5rem
			padding 0 1.5rem 0
			position relative
			z-index 1
			
			strong
				font-weight $Normal
			
		.img-avatar
			position relative
			z-index 2
			
	&-camerino
		path('bg-negro.jpg')
		background-size cover
		margin-bottom 6rem
		
	&-suplente
		path('bg-azul.jpg')
		background-size cover
		margin-bottom 4rem
		margin-top 1rem
		

.team
	&-local, &-visitante
		display block
		height 100%
		position initial !important
		width @height