::selection /* WebKit/Blink Browsers */
	background $Verde
	color #fff 

::-moz-selection /* Gecko Browsers */
	background $Verde
	color #fff
	

::-webkit-file-upload-button
	cursor pointer

a
	color $Azul
	transitionBase(0.3s)
	
	&:hover
		color $Verde
		text-decoration underline
		
	img
		border 0 !important

body
	background-color #fff
	color $Gris
	font-family $Rexona
	font-size 1.4rem
	font-weight $Normal 

footer
	background-color #353535
	color #fff
	
	a
		color #fff
		
	strong
		color #fff

h1, h2, h3, h4, h5, h6
	font-family $Rexona
	
header
	background-color #fff

strong
	color $Azul
	font-weight $Bold