footer
	padding 2rem 1rem
	
	section
		p
			font-size 1rem
	
	.links-legales
		list-style none
		margin 2rem auto !important
		padding 0
		
		li
			display inline-block
			margin-left 0.5rem
			margin-right @margin-left
			text-align center
			
			a
				color $Gris
				font-size 1.2rem
				text-transform uppercase
				


	.redes-sociales
		list-style none
		margin 0 auto !important
		padding 0
		max-width 18rem
		

		li
			display inline-block
		
		
		.icon
			path("icons-redes.png")
			background-repeat no-repeat
			background-position 0 0
			circ(4.1rem)
			display block
			padding 0 
			transitionBase(0.3s)
			text-indent -9999rem
			
			&:hover
				text-decoration none !important
				transform scale(1.05)
				
			&:active
				text-decoration none !important
				transform scale(0.95)
				
			
			&-fb
				background-position 0 0
			&-g
				background-position 66% 0
			&-tw
				background-position 100% 0
			&-yt
				background-position 33% 0
		
		
		