//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	- var titulo = 'Galeria';
	title #RETOAMOVERSE - Rexona


//-Etiqueta Metadescription
block description
	meta(name="description", content="#RETOAMOVERSE Rexona" )

block content
	section.container-fluid
		div.header.header-galeria

			div.row
				div.col-lg-10.col-md-10.col-sm-10.col-lg-offset-1.col-md-offset-1.col-sm-offset-1
					h1 ¡mira cómo se mueven las personas para  brindar su apoyo!
					
					a#Buscar.btn.btn-buscar(href="#Buscar" role="button")
						span.glyphicon.glyphicon-search

						|  Buscar


					a#grid.btn.btn-grid(href="#grid" role="button")
						span.glyphicon.glyphicon-th

						|  Reorganizar
					

					div.clearfix

					
					form#search-user.col-lg-4.col-md-6.col-sm-6.col-xs-12.col-lg-offset-4.col-md-offset-3.col-sm-offset-3
						label(for="buscar")
							span.glyphicon.glyphicon-search
						input(name="buscar", id="buscar", type="text", placeholder="@RexonaMDA")

			
				
					div.table-responsive.table-select-grid
						div.range-select
							output(for="grid") 1 x 1
							input( id="select-grid", name="select-grid", type="range", min="1", max="4", steps="1", value="1" )

						table.table
							-for(x = 0; x <1; x++)
								tr
									-for(y = 0; y <1; y++)
										td(data-grid="0")


		//- div.row

	section.container-fluid.container-video
		div.video-grid
			
			-for(x = 0; x < 16; x++ )
				div.video-grid-item
					button.btn.btn-play.glyphicon.glyphicon-play-circle(type="button")

					video(id=x name="media" poster="https://scontent.cdninstagram.com/t51.2885-15/e15/p640x640/14709562_239453386469542_1050734749347217408_n.jpg?ig_cache_key=MTM2OTEwMjQxNTY4NDUzNTI0MA%3D%3D.2").

						<source src="https://scontent.cdninstagram.com/t50.2886-16/14876951_1123029604440065_8909944526391476224_n.mp4" type="video/mp4"></video>

		
		div.row
			div.pagination
				ol
					li
						a(href="#" class="previous") &laquo;

					li.active
						a(href="#") 1
					-for(x = 2; x < 5; x++ )
						li
							a(href="#") #{x}

					li
						a(href="#" class="next") &raquo;

	
block Scripts
	script(src="js/challenge-rexona.video.js")

