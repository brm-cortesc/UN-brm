.btn
	background-color $Morado
	border-radius 0px
	color $Verde
	display inline-block
	vertical-align middle
	text-transform uppercase
	transitionBase(0.3s)
	
	&-active
		background-color $Morado !important
		color #fff !important
		pointer-events none
		outline none !important
	
	&-buscar, &-grid
		background-color #000
		color #fff
		font-size 2rem
		margin 2rem
		max-width 48%
		
		span
			color $Cyan
		
		&:hover, &:active
			background-color darken($Morado, 20%)
			color #fff
	
		

	&-ingresar
		background-color $Verde
		color $Morado
		display block
		margin 0 auto
		max-width 10rem
		padding 0.5rem 2rem
		position relative
		text-transform initial
		
		&::before
			background-color $Verde
			content ''
			height 0.1rem
			position absolute
			right 0
			top 50%
			transitionBase(0.3s)
			width 50%
			z-index -1
		
		&:hover
			background-color $Verde
			color $Morado
				
			text-decoration none
			
			&::before
				transform rotate(-45deg)
				width 110%
				

	&-play
		background-color transparent
		color #fff
		cursor pointer
		// pointer-events none
		display block
		font-size 6rem
		margin 0 auto
		padding 0
		text-align center
		text-shadow 0px 0px 5px rgba(0, 0, 0, 0.75)
		centrarAb()
		left 25%
		width (@left*2)
		z-index 10
		
		&:active, &:focus, &:hover
			color #fff
			opacity 0.5
			outline 0
			outline none 