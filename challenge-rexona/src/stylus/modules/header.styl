header
	path('bg-header.png')
	background-position 44% 100%
	background-repeat no-repeat
	position relative
	height 11rem
	
	.menu
		text-align center
		ul
			list-style-type none
			padding 0
			margin 0 auto
			display inline-block
			max-width 100%
			

			li
				display inline-block
				max-width 36%
				text-align center
				vertical-align middle
				
				
				a
					color $Gris
					display block
					padding 0.5rem 1rem
					text-transform uppercase
				