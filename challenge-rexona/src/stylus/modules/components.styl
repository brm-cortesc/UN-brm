section.container-fluid
	&:nth-of-type(1)
		padding 0

.container
	&-sedentarismo
		path('bg-sedentarismo.jpg')
		background-position top center
		background-repeat no-repeat
		color $Azul
		text-align center
		padding-bottom 8%
		padding-top @padding-bottom
		
		span
			text-decoration underline
		

		.row
			path('bg-txt-sedentarismo.png')
			background-position center
			background-repeat no-repeat
			color $Morado
			font-size 2.2rem
			padding 10% 8rem
				
	
	&-video
		padding 0

.donaciones
	margin 4rem auto
	input
		display none

.header
	&-home, &-galeria
		path('header.jpg')
		background-repeat no-repeat
		background-size cover
		margin-top -11rem
	
	h1
		color #fff
		font-size 4rem
		line-height 1.1
		margin 0 auto
		// max-width 100%
		// padding 22% 0
		// padding calc('100vh - 46rem' ) 0
		position relative
		text-align center
		text-shadow 0px 0px 10px rgba($Azul, 0.5)
		text-transform uppercase
		// width 50%
		
		strong
			display block
			font-size 5rem
			
	.text-slice
		// path('line-ppal.png')
		// background-position center
		// background-repeat no-repeat
		margin 0 auto
		max-width 100%
		// overflow hidden
		padding 22% 0
		padding calc('100vh - 46rem' ) 0
		width 42%
		
	.slice
		display block
		position absolute
		overflow hidden
		width 100%
		white-space nowrap
		transform skewX(-45deg)
		
		span
			display block
			transform skewX(45deg)
			
		
		&-l
			left 0
			transform skewX(-45deg) translate3d(-44.3%, -2%, 0)
			
			span
				transform skewX(45deg) translateX(43.7%)
			
		&-r
			right 0
			transform skewX(-45deg) translate3d(55.7%, 2%, 0)
			
			span
				transform skewX(45deg) translateX(-55.7%)
				
	&-home
		display flex
		height 68rem
		height 100vh

	&-galeria
		padding 12% 0 2%
		text-align center
		
		h1 
			margin-bottom 2rem
		
		form
			display none
		

.logo
	display inline-block
	margin 0 auto
	width 6.4rem
	
	img
		height auto
		width 100%
		max-width 100%
	

.paso
	background-color rgba(#323a81,0.8)
	border-radius 100%
	cuadrado(19.6rem)
	padding 4.6rem
	text-align center
	width 100%
	
	svg
		margin 0 auto
		cuadrado(10rem)
		

		
.range
	height 0.5rem
	margin-top 7rem
	position relative
	
	&::after, &::before
		background-color $Verde
		bottom 0
		content ''
		height 2rem
		position absolute
		width 0.5rem
		

	&::after
		left 0
		
	&::before
		background-color #fff
		right 0
		
	
	span
		color $Verde
		font-size 1.6rem
	
	.bar
		background-color #fff
		height 0.5rem
		overflow hidden
		position relative
		width 100%
		
		.fill
			background-color $Verde
			height 100%
			left 0
			position absolute
			top 0
			width 25%
			
	.text
		bottom 0
		color $Verde
		font-size 2rem
		left 26%
		line-height 1
		max-width 8rem
		padding-left 2.6rem
		position absolute
		
		&::before
			background-color #fff
			content ''
			height 0.1rem
			margin-left -0.5rem
			position absolute
			top 50%
			transform rotate(140deg)
			transform-origin 0 50%
			width 100%
		


.tweets
	h3
		color #fff
		font-size 2rem
		line-height 1.2
		text-align center
		
		img
			height 100%		
			height auto
			max-width 3.6rem		
		span
			color $Verde
			display block
			
			&.cantidad
				font-size 4rem
				

.video-grid
	// background-color #fff
	position relative
	
	
	&::after, &::before
		content " "
		display table
	
	.container-video
		float left
		height 0
		padding-bottom (100%/8)
		position relative
		text-align center
		width (100%/8)
		
		&::after, &::before
			content " "
			display table

		&:nth-of-type(odd)
			background-color $Morado
			
		&:nth-of-type(even)
			background-color $Azul
			




		

			