section.container-fluid
	&:nth-of-type(1)
		background-color $Morado
		padding 0
		
.container
	&-sedentarismo
		path('bg-sedentarismo.png')
		background-position top center
		background-repeat no-repeat
		color $Azul
		text-align center
		padding-bottom 12%
		padding-top @padding-bottom
		
		
		p
			color #000
			line-height 1.1
			
			em
				color $Morado

		span
			text-decoration underline
		

		.row
			path('bg-txt-sedentarismo.png')
			background-position center
			background-repeat no-repeat
			color $Morado
			font-size 2.2rem
			padding 10% 8rem
				
	
	&-video
		padding 0

.donaciones
	margin 4rem auto
	

.header
	&-home, &-galeria
		path('header.jpg')
		background-repeat no-repeat
		background-size cover
		margin-top -11rem
	
	h1
		color #fff
		font-size 4rem
		line-height 1.1
		margin 0 auto
		position relative
		text-align center
		text-shadow 0px 0px 10px rgba($Azul, 0.5)
		text-transform uppercase

		
		strong
			color $Cyan
			display block
			font-size 5rem
			
	h2
		color #fff
		position relative
		margin-top 30%

			
	.text-slice
		// path('line-ppal.png')
		// background-position 47% 50%
		// background-repeat no-repeat
		margin 0 auto
		max-width 100%
		padding 22% 0
		padding calc('100vh - 46rem' ) 0
		transitionBase(0.3s)
		width 42%
		
	.slice
		display block
		position absolute
		overflow hidden
		width 100%
		white-space nowrap
		transform skewX(-45deg)
		
		span
			display block
			transform skewX(45deg)
			
		
		&-l
			left 11%
			opacity 0
			transform skewX(-45deg) translate3d(-44.3%, -2%, 0)
			
			span
				transform skewX(45deg) translateX(43.7%)
			
		&-r
			opacity 0
			right 11%
			transform skewX(-45deg) translate3d(55.7%, 2%, 0)
			
			span
				transform skewX(45deg) translateX(-55.7%)
				
	&-home
		display flex
		height 68rem
		height 100vh

	&-galeria
		padding 12% 0 2%
		text-align center
		
		h1 
			margin-bottom 2rem
		
		// form
		// 	display none
		

.logo
	display inline-block
	margin 0 auto
	width 6.4rem
	
	img
		height auto
		width 100%
		max-width 100%
	

.paso
	background-color rgba(#323a81,0.8)
	border-radius 100%
	cuadrado(19.6rem)
	padding 4.6rem
	text-align center
	// width 100%
	
	svg
		margin 0 auto
		cuadrado(10rem)
		

		
.range
	height 0.5rem
	margin-top 7rem
	position relative
	
	&::after, &::before
		background-color $Verde
		bottom 0
		content ''
		height 2rem
		position absolute
		width 0.5rem
		

	&::after
		left 0
		
	&::before
		background-color #000
		right 0
		
	
	span
		color $Verde
		font-size 1.6rem
	
	.bar
		background-color #000
		height 0.5rem
		overflow hidden
		position relative
		width 100%
		
		.fill
			background-color $Verde
			height 100%
			left 0
			position absolute
			top 0
			width 25%
			
	.text
		bottom 0
		color $Morado
		font-size 2rem
		left 27%
		line-height 1
		max-width 8rem
		padding-left 2.6rem
		position absolute
		text-transform uppercase
		
		&::before
			background-color $Morado
			content ''
			height 0.1rem
			margin-left -0.5rem
			position absolute
			top 50%
			transform rotate(140deg)
			transform-origin 0 50%
			width 100%
			
		.numero
			display block
			font-size 4rem
			
		
	&-select
		output
			color $Azul
			text-shadow 0px 0px 5px rgba($Cyan, .75)
			font-size 3rem 
			left 25% 
			position absolute
			top 40% 
			width 50% 
			z-index 10 


.tweets
	h3
		color $Verde
		font-size 2rem
		line-height 1.2
		text-align center
		
		img
			height 100%		
			height auto
			max-width 3.6rem		
		span
			color #666
			display block
			
			&.cantidad
				color #000
				font-size 4rem
				

.video-grid
	// background-color #fff
	position relative
	margin-bottom 4rem
	
	
	
	&::after, &::before
		content " "
		display table
	
	&-item
		path('pattern.jpg')
		// float left
		margin 0 auto
		height 0
		padding-bottom (100%/2)
		position relative
		text-align center
		overflow hidden
		transitionBase(0.3s)
		width @padding-bottom
		
		&::after, &::before
			content " "
			display table

		&:nth-of-type(odd)
			background-color #fff
			
		&:nth-of-type(even)
			background-color #333
			
		// &:nth-child(n+2)
		// 	background-color #333
			
		// 	&:nth-child(-n+3)
		// 		background-color #fff
			

		video
			height auto
			width 100%
			
			&[poster]
				object-fit cover
				-webkit-object-fit cover
				-moz-object-fit cover
				-ms-object-fit cover
				-o-object-fit cover
				

		for x in (1..4)
			&-w-{x}
				display block
				float left
				padding-bottom (50%/x)
				width (100%/x)
				
		&-w-1
			float none
			padding-bottom 50%
			width 50%
			
				

	& ~ .row
		clear both



		

			