.banner-home
	path('bg-header.jpg')
	background-position top center
	background-repeat no-repeat
	background-size 100%
	

.descripcion-sitio
	background-color rgba($Azul, 0.9)
	border 1px solid $Verde
	color #fff
	font-family $Rexona
	font-size 1.8rem
	padding 0.5rem
	position relative
	text-align center
	text-transform uppercase
	
	&:after
		background-color #000
		border-radius 100%
		bottom -1.7rem
		box-shadow 0px 0px 10px 0px #000
		content ''
		display block
		height 0.7rem
		left 0
		opacity 0.4
		position absolute
		width 100%
		z-index 0


.dir
	path('bg-direct.jpg')
	background-position 0 0
	background-repeat no-repeat
	background-size 400%
	position relative
	
	a
		background-color rgba($Azul, 0.9)
		border 1px solid $Verde
		color #fff
		display block
		font-family $Rexona
		font-size 2.5rem
		margin 9.3rem auto
		max-width 24.4rem
		padding 0.5rem
		position relative
		text-align center
		text-transform uppercase
		transitionBase(0.2s)
		z-index 1
		
		&:after
			path('icon-rexona.svg')
			background-repeat no-repeat
			background-size 100%
			bottom -2.3rem
			content ''
			height 5.8rem
			position absolute
			right @bottom
			transitionBase(0.3s)
			width 4.8rem
			z-index 2
			

		&:active, &:hover, &:visited
			background-color rgba($Azul, 0.5)
			border-color $Azul
			text-decoration none
			text-shadow 0px 0px 5px darken($Azul, 60%)
			
			&:after
				height 5.5rem
				width 4.5rem
			
	&-pos
		background-position 33% 0
		
	&-gol
		background-position 66% 0
		
	&-premio
		background-position 100% 0

.logo-home
	margin 0 auto

.selector-galerias
	path('bg-blue.jpg')
	background-repeat no-repeat
	background-size cover
	text-align center
	
	a
		background-color rgba($Azul, 0.9)
		border 1px solid $Verde
		color #fff
		display block
		font-family $Rexona
		font-size 2.5rem
		margin 12.3rem auto
		max-width 24.4rem
		padding 0.5rem
		position relative
		text-align center
		text-transform uppercase
		transitionBase(0.2s)
		z-index 1
		
		&:active, &:hover, &:visited
			background-color rgba($Azul, 0.5)
			border-color $Azul
			text-decoration none
			text-shadow 0px 0px 5px darken($Azul, 60%)
			

	.galeria
		path('btn-galeria.png')
		background-position center
		background-repeat no-repeat
		background-size 100%
		margin-bottom 2rem
		margin-top @margin-bottom
		text-align center
		
	.tribuna
		path('btn-tribuna.png')
		background-position center
		background-repeat no-repeat
		background-size 100%
		margin-bottom 2rem
		margin-top @margin-bottom
		text-align center

.tit
	text-shadow 0px 0px 20px rgba($Azul, 0.5)
	color #fff
	font-size 3.9rem
	text-align center
	text-transform uppercase
	

	&-home
		margin-top 17rem