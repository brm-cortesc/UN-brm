.banner-home, .banner-interna
	path('bg-header.jpg')
	background-position top center
	background-repeat no-repeat
	background-size 100%
	position relative
	

.banner-interna
	background-position 0% 50%


.descripcion
	font-size 2rem
	font-weight $Light
	margin 0 auto
	max-width 50rem
	padding-top 10rem
	text-align center

.descripcion-sitio
	background-color rgba($Azul, 0.9)
	border 1px solid $Verde
	color #fff
	font-family $Rexona
	font-size 1.8rem
	padding 0.5rem
	position relative
	text-align center
	text-transform uppercase
	
	&:after
		background-color #000
		border-radius 100%
		bottom -1.7rem
		box-shadow 0px 0px 10px 0px #000
		content ''
		display block
		height 0.7rem
		left 0
		opacity 0.4
		position absolute
		width 100%
		z-index 0


.dir
	path('bg-direct.jpg')
	background-position 0 0
	background-repeat no-repeat
	background-size 400%
	position relative
	overflow hidden
	
	a
		background-color rgba($Azul, 0.9)
		border 1px solid $Verde
		color #fff
		display block
		font-family $Rexona
		font-size 2.5rem
		margin 27% auto
		max-width 24.4rem
		padding 0.5rem
		position relative
		text-align center
		text-transform uppercase
		transitionBase(0.2s)
		z-index 1
		
		&:after
			path('icon-rexona.svg')
			background-repeat no-repeat
			background-size 100%
			bottom -2.3rem
			content ''
			height 5.8rem
			position absolute
			right @bottom
			transitionBase(0.3s)
			width 4.8rem
			z-index 2
			

		&:active, &:hover
			background-color rgba($Azul, 0.5)
			border-color $Azul
			text-decoration none
			text-shadow 0px 0px 5px darken($Azul, 60%)
			
			&:after
				height 5.5rem
				width 4.5rem
			
	&-pos
		background-position 33% 0
		
	&-gol
		background-position 66% 0
		
	&-premio
		background-position 100% 0


.genero-M, .genero-F
	transitionBase(0.3s)
	
.genero-F
	display none

.logo
	// margin-top 3rem
	position absolute
	z-index 3

.logo-home
	margin 0 auto
	
.jornada
	text-align center
	margin 2rem auto
	
	h3
		color #122d4d
		display inline
		font-size 5rem
		letter-spacing -0.5rem
		margin 0
		padding 0
		text-transform uppercase
		vertical-align middle
		font-weight $Bold
		
	.derecha
		color $Azul
		display inline-block
		vertical-align middle
		font-size 2rem
		margin 0
		padding 0
		text-transform uppercase
		
		p, time
			display block
			max-width 100%
			line-height 1rem

.selector
	&-galerias
		path('bg-blue.jpg')
		background-repeat no-repeat
		background-size cover
		text-align center
		
		a
			background-color rgba($Azul, 0.9)
			border 1px solid $Verde
			color #fff
			display block
			font-family $Rexona
			font-size 2.5rem
			margin 12.3rem auto
			max-width 24.4rem
			padding 0.5rem
			position relative
			text-align center
			text-transform uppercase
			transitionBase(0.2s)
			z-index 1
			
			&:active, &:hover, &:visited
				background-color rgba($Azul, 0.5)
				border-color $Azul
				text-decoration none
				text-shadow 0px 0px 5px darken($Azul, 60%)
				

		.galeria
			path('btn-galeria.png')
			background-position center
			background-repeat no-repeat
			background-size 100%
			margin-bottom 2rem
			margin-top @margin-bottom
			text-align center
			transitionBase(0.3s)
			
		.tribuna
			path('btn-tribuna.png')
			background-position center
			background-repeat no-repeat
			background-size 100%
			margin-bottom 2rem
			margin-top @margin-bottom
			text-align center
			transitionBase(0.3s)
			
	&-interna
		a
			font-size 2rem
			margin 6rem auto
			transitionBase(0.3s)
			
		.active
			&, a
				cursor default !important
				opacity 0.5
				transform scale(0.8)
		.galeria
			background-size 54%
		.tribuna
			background-size 70%


.spark
	animation sparks 4.5s linear 0s infinite normal
	background-color lighten($Azul, 40%)
	border-radius 100%
	box-shadow 0px 0px 5px lighten($Verde, 60%)
	height 0.4rem
	position absolute
	width @height

.tit
	color #fff
	font-size 3.9rem
	margin-bottom 10rem
	margin-top 11rem
	text-align center
	text-shadow 0px 0px 20px rgba($Azul, 0.5)
	text-transform uppercase
	

	&-home
		margin-top 17rem