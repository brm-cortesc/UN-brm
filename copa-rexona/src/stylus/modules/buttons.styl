.btn
	border 1px solid $Verde
	background-color $Azul
	color #fff
	display block
	font-size 1.8rem
	margin 1rem auto 0
	padding 1rem 
	text-transform uppercase
	transitionBase(0.3s)
	
	&:active, &:focus
		transform scale(0.95)
		

	&:hover
		background-color lighten($Azul, 30%)
		color #fff
		

	&-acordeon
		background-color rgba(#3e4555, 0.85)
		border 0
		border-bottom 4px solid $Verde
		border-radius 0
		font-family $Rexona
		font-size 2.5rem
		letter-spacing -0.1rem
		text-transform uppercase
		width 100%
		
		&:active, &:focus
			color #fff
			outline 0 !important
			outline none !important
			transform none
			

		&:after
			content '\002b'
			font-family $Icon
			float right
			margin-left 0.5rem
			

		&.active
			box-shadow 0px 10px 10px 0px rgba(0, 0, 0, 0.25)
			&:after
				content '\2212'
				
		
	&-terminos
		margin 5rem auto
		max-width 50rem
		

	&-switch
		display inline-block
		vertical-align middle