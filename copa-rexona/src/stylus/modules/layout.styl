.col
	&-menu
		padding 2rem 0.5rem 0
		position relative
		

.container
	&-spark
		bottom 0
		height 100%
		left 0
		overflow hidden
		pointer-events none
		position absolute
		right 0
		top 0
		width 100%


.row
	margin 0 auto
	max-width 124rem
	position relative
	

	for x in (1..12)
	
		.col-lg-{x}, .col-md-{x}, .col-sm-{x}, .col-xs-{x}
			padding-left 5px
			padding-right @padding-left
			transitionBase(0.3s)