::selection /* WebKit/Blink Browsers */
	background $Azul
	color #fff 

::-moz-selection /* Gecko Browsers */
	background $Azul
	color #fff
	

::-webkit-file-upload-button
	cursor pointer

a
	color $Azul
	transitionBase(0.3s)
	
	&:hover
		color lighten($Azul, 40%)
		text-decoration underline
		
	img
		border 0 !important

body
	background-color #fff
	path("bg.jpg")
	background-position top center 
	background-repeat no-repeat
	background-size cover
	color $Gris
	font-family $Rexona
	font-size 1.4rem
	font-weight $Normal 


footer, header
	background-color #fff

strong
	color $Azul
	font-weight $Bold