extends partials/base.jade

block title
	-var titulo = "Calendario";
	title Calendario Copa Rexona

block content
	section.container-fluid.banner-interna
		article.row
			//Logo Home
			div.col-lg-3.col-md-3.col-sm-6.col-xs-12.col-lg-offset-2.col-md-offset-2
				img.logo.img-responsive(src="images/logo-copa-rexona.png", alt="Copa Rexona", title="Copa Rexona")
			///-Logo Home

			div.col-lg-3.col-md-3.col-sm-6.col-xs-12.col-lg-offset-1.col-md-offset-1
				
				h1.tit Tabla de Posiciones


			div.clearfix

	section.container-fluid
		h2.descripcion.
			Sigue punto a punto la disputa por la <strong>#CopaRexona</strong> 
		
		article.row

			div.jornada
				h3 Fecha 1
				p.dia martes
				time.fecha 18 de junio
			div.col-lg-8.col-md-8.col-sm-8.col-xs-12.col-lg-offset-2.col-md-offset-2.col-sm-offset-2
				-for(a = 1; a <= 3; a++)
					div.table-responsive.grupos
						h3.titulo-tabla Grupo #{a}
						table.table
							tr
								th &nbsp;
								th PTS
								th PJ
								th PG
								th PE
								th PP
								th GF
								th GC
								th DG

							-for(x = 1; x <= 6; x++)
								tr
									td  Equipo #{x}
									td  4
									td  5
									td  7
									td  0
									td  0
									td  0
									td  3
									td  +2

		
block Scripts