.page-pink-black
	article
		.helado
			cursor pointer
	h1.text
		&-center
			font-size 2.1rem
			margin auto
			max-width 30rem
			
			span
				display block
				font-size 3.1rem
				
		&-home
			position absolute
			top 40%
			left 50%
			transform translate3d(-50%,0,0)
		
		&-section
			left 42%
			position absolute

	.col-compartir
		
		p
			font-size 1.6rem
			text-transform uppercase
				
	.helado
		border 1px solid #fff
		centrar(0.5rem,25rem)
		
		.img-responsive
			centrar(0,16rem)
		
		canvas
			height auto
			width 100%

	
	.img-gif
		position relative
		
		// &::after
			
		&::before
			border 2px solid #fff
			content ' '
			display block
			height 100%
			left 4px
			max-height 53rem
			max-width @max-height
			position absolute
			top 0
			width 98%
			z-index 10
			
		.img-responsive
			// margin-left -1%
			// margin-bottom abs(@margin-left)
			// margin-top @margin-left
			position relative
			

	.loader
		centrarAb()
		padding 0
		margin 0
		text-align center
		width 85%
		

		.status
			bottom 0
			left 40%
			margin 0
			position absolute
			right 0
			top 30%
			height auto
			width 20%
			
			h2
				display none
				position absolute
				text-align center
				top 25%
				width 100%
				
			svg
				height auto
				width 100%
		

	.menu-dummie
		height 12rem
		

	.row-btn
		.btn
			display inline-block
			max-width 49.5%
			width 49.5%
			
			&-reload
				margin-right 0.4%
				
			&-ver-black
				margin-left @margin-right
				

.page
	&-black, &-pink
		.helado
			border none
			position absolute
			right 0
			bottom -16rem
			width 27rem
			

			.img-responsive
				width 100%
				
.text
	&-white
		color white !important			