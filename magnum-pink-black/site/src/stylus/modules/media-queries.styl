@media (min-width 310px)
	.page-magnum-pink-black
		h1.text-home, h1.text-section
			font-size 1.2rem
			max-width 80%
			position initial
			transform none
			
			span
				font-size 1.9rem
		h1.text-section
			text-align left
			margin 0
			margin-bottom 3rem
			
		.btn 
			&-ver-black, &-ver-pink
				font-size 1.2rem
				svg
					display block
					margin auto
		
		.col-xs-offset-1
			margin-left 0
				
		.col-compartir
			margin-top 0
			text-align center
			
			p
				display block
				font-size 1.4rem
				text-align center
			
			.btn
				display inline-block
				cuadrado(3rem)
				margin 0 0.5rem
				padding 0.3rem
	
				span 
					display none	
				
				svg
					display block
					height auto
					margin auto
					max-width 100%
					position initial
					
					path
						fill #fff
						stroke 0
						
				&-fb
					svg
						max-width 50%

		.menu-dummie
			height 12.2rem
			
		.helado
			max-width 100%
			
			#pink-home
				max-width 92%
			
			.img-responsive
				width 6.8rem
				

				
		.row-btn
			.btn
				display block
				font-size 1.4rem
				max-width 100%
				width 100%
				
				svg
					display inline-block
					margin-left -4.5rem
					margin-right abs(@margin-left)
					
				
	.page
		&-black, &-pink
			.helado
				bottom initial
				top -3rem
				right -1rem
				width 8rem
				z-index 11

