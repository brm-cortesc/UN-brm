//-mixins PUG
include partials/mixins.pug
doctype html
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="es-CO"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang="es-CO"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="es-CO"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="es-CO"> <!--<![endif]-->
head
	meta(charset='utf-8')
	block title
		title BlockTitle
	block description
		meta(name="description" content="Pink and Black" )
	meta(http-equiv='X-UA-Compatible', content='IE=edge')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
	
	if debug == true 
		link(rel='stylesheet', href='css/bootstrap.min.css')
		link(rel='stylesheet', href='css/style.css')

	else
		link(rel='stylesheet', href='css/'+name+'.min.css') 

	// Web Fonts
	link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet")

	<!--[if lt IE]>
	<script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
	//- Modernizr para tener compatilibidad de elementos semánticos HTML5
	//- & para identificar si el browser soporta css3 para generar reglas especificas en los casos que no soporte una propiedad 
	script(src='js/libs/modernizr-2.6.2.min.js')

case titulo
	when 'Pink'
		body.page-magnum-pink-black.page-pink
				
			
			block content-pink

			//- Layout del Footer
			include partials/footer.pug
			
			//-Acá se agregan los scripts que pueden estar para una sola página
			block Scripts

		-break	

	when 'Black'
		body.page-magnum-pink-black.page-black
				
			
			block content-black

			//- Layout del Footer
			include partials/footer.pug
			
			//-Acá se agregan los scripts que pueden estar para una sola página
			block Scripts

		-break

	default
		body.page-magnum-pink-black
				
			block content


			//- Layout del Footer
			include partials/footer.pug
			
			//-Acá se agregan los scripts que pueden estar para una sola página
			block Scripts

		-break	

</html>